@model IEnumerable<CinemaManagementSystem.Models.Coupon>

@{
    ViewData["Title"] = "List of Coupon";
}



<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.CouponCode)</th>
                    <th>@Html.DisplayNameFor(model => model.Discount)</th>
                    <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                    <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.CouponCode)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Discount)%
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.CouponId"><i class="bi bi-pencil-square"></i>Edit </a> |
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.CouponId"><i class="bi bi-eye"></i>Details </a> |
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.CouponId"><i class="bi bi-trash"></i>Delete </a>
                            </td>
                        }
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Coupons")