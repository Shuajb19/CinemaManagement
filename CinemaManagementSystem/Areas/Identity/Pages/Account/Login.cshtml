@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<body class="bodyy">
    <div class="container" style="position: absolute; top: 11%; left: 0; right: 0; opacity: 0.85">
        <div class="row content">
            <div class="col-md-6 mb-3">
                <img src="~/Images/popcorn.png" class="img-fluid" style="border-radius: 10px;" alt="image" />
            </div>
            <div class="col-md-6">
                <h3 class="signin-text mb-3"> Sign in</h3>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label>Username</label>
                        <input asp-for="Input.UserName" class="form-control form-controls" />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input asp-for="Input.Password" class="form-control form-controls" />
                    </div>
                    <div class="form-group form-check">
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            <input asp-for="Input.RememberMe" class="form-check-input" style="width:auto;" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <input type="submit" class="btn btn-class" value="Log in">
                </form>
            </div>
        </div>
    </div>

