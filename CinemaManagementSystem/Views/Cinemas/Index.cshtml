@model IEnumerable<CinemaManagementSystem.Models.Cinema>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Cinema List</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" asp-controller="Cinemas" class="btn btn-primary">
            Create New Cinema
            </a>
        </div>
          

    </div>
    <br />
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Name 
                    </th>
                    <th>
                        Room
                    </th>
                    <th>
                        Capacity
                    </th>
                      <th>
                        Edit/Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td style="width:50%">@obj.Name</td>
                        <td style="width:30%">@obj.Room</td>
                        <td style="width:10%">@obj.Capacity</td>
                        <td class="text-center">
                            <div class="w-75 btn btn-group" role="group">

                             <a asp-action="Edit" asp-route-Id="@obj.Id" asp-controller="Cinemas" class="btn btn-primary mx-2">
            <i class="fas fa-edit"></i>

            </a>
            <form asp-action="Delete" asp-route-id="@obj.Id" method="post">
                <button type="submit" class="btn btn-danger" onclick="return confirm ('Are you sute you wante to delete cinema:@obj.Name')">
                    <i class="far fa-trash-alt"></i>
                </button>
            </form>
            </div>
            </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Cinema  Exists</p>
    }